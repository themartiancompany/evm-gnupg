_bin="$(
  dirname \
    "$(command \
         -v \
         "env")")"
_lib="$(
  realpath \
    "${_bin}/../lib")"
  _crash_bash="${_lib}/libcrash-bash/crash-bash"
  _libevm="${_lib}/libevm/libevm"
  _sourced \
    "${_crash_bash}" 2>/dev/null || \
    source \
    "${_crash_bash}"
  _sourced \
    "${_libevm}"

# shellcheck disable=SC2034
_global_variables() {
  call_date=""
  wallet_name=""
  wallet_path=""
  wallet_password=""
  wallet_seed=""
  wallet_address=""
  gnupg_home=""
  input_type=""
  output_type=""
  key_passphrase=""
  key_type=""
  key_comment=""
  target_command=""
  target_key=""
  target_value=""
  with_colons=""
  command_args=()
  cache_dir=""
  color=""
  quiet=""
}

_requirements() {
  _check_cmd \
    'libevm-requirements'
  libevm-requirements
  _check_cmd \
    'evm-wallet'
  }

_get_conf_dir_path() {
  local \
    _dir
  _dir="${HOME}/.config/evm-gnupg"
  echo \
    "${_dir}"
  }

# Generate an OpenPGP key for the input address
_key_new() {
  local \
    _gnupg_home="${1}" \
    _email="${2}" \
    _name="${3}" \
    _passphrase="${4}" \
    _comment="${5}" \
    _gpg_conf_array=() \
      _gpg_generate_array=() \
        _gpg_opts=()
  _gpg_opts+=(
    --homedir
    "${_gnupg_home}"
    --gen-key
  )
  _gpg_conf_array+=(
    "quiet"
    "batch"
    "no-tty"
    "no-permission-warning"
    "export-options no-export-attributes,export-clean"
    "list-options no-show-keyring"
    "armor"
    "no-emit-version"
  )
  _gpg_generate_array+=(
    "%echo Generating key pair for '${_name}'..."
    "Key-Type: eddsa"
    "Key-Curve: ed25519"
    # "Key-Length: 4096"
    "Key-Usage: sign"
    "SubKey-Type: ecdh"
    "SubKey-Curve: cv25519"
    "SubKey-Usage: encrypt"
    "Name-Real: ${_name}"
  )
  if [[ "${_comment}" != "" ]]; then
    _gpg_generate_array+=(
      "Name-Comment: ${_comment}"
    )
  fi
  _gpg_generate_array+=(
    "Name-Email: ${_email}"
  )
  if [[ "${_passphrase}" != "" ]]; then
    _gpg_generate_array+=(
      "Passphrase: ${_passphrase}"
    )
  fi
  _gpg_generate_array+=(
    "Expire-Date: 0"
  )
  if [[ "${_passphrase}" == "" ]]; then
    _gpg_generate_array+=(
      "%no-protection"
    )
  fi
  _gpg_generate_array+=(
    "%commit"
    "%echo Done"
  )
  mkdir \
    -p \
    "${_gnupg_home}"
  chmod \
    700 \
    "${_gnupg_home}"
  cat << \
    __EOF__ > \
      "${_gnupg_home}"/gpg.conf
$(printf \
    '%s\n' \
    "${_gpg_conf_array[@]}")
__EOF__
gpg \
  "${_gpg_opts[@]}" <<EOF
$(printf \
    '%s\n' \
    "${_gpg_generate_array[@]}")
EOF
}

_keys_secret_list() {
  local \
    _gnupg_home="${1}" \
    _output_type="${2}" \
    _query="${3}" \
    _gpg_opts=() \
    _gpg_key_info_opts=() \
    _list \
    _out \
    _key
  if [[ "${quiet}" == "n" ]]; then
    _gpg_key_info_opts+=(
      -v
    )
  fi
  _key="${_cache_dir}/key.asc"
  _gpg_opts+=(
    --homedir
    "${_gnupg_home}"
  )
  if [[ "${_output_type}" == "fingerprint" ]]; then
    _with_colons="y"
  fi
  if [[ "${_with_colons}" == "y" ]]; then
    _gpg_opts+=(
      --with-colons
    )
  fi
  if [[ "${_output_type}" == "" ]]; then
    if [[ "${_key_type}" == "public" ]]; then
      _list="--list-keys"
    elif [[ "${_key_type}" == "private" ]]; then
      _list="--list-secret-keys"
    fi
    _gpg_opts+=(
      "${_list}"
    )
    if [[ "${_query}" != "" ]]; then
      _gpg_opts+=(
        "${_query}"
      )
    fi
    _msg=(
      "Running gpg with options"
      "'${_gpg_opts[*]}'."
    )
    _msg_info \
    "${_msg[*]}"
    GNUPGHOME="${_gnupg_home}" \
    gpg \
      "${_gpg_opts[@]}"
  else
    if [[ "${_key_type}" == "public" ]]; then
      _export="--export"
    elif [[ "${_key_type}" == "private" ]]; then
      _export="--export-secret-keys"
    fi
    _gpg_opts+=(
      "${_export}"
      --armor
    )
    if [[ "${_query}" != "" ]]; then
      _gpg_opts+=(
        "${_query}"
      )
    fi
    _msg=(
      "Running gpg with options"
      "'${_gpg_opts[*]}'."
    )
    _msg_info \
      "${_msg[*]}"
    GNUPGHOME="${_gnupg_home}" \
    gpg \
      "${_gpg_opts[@]}" > \
      "${_key}"
    _gpg_key_info_opts+=(
      -t
        "${_key_type}"
      -o
        "${_output_type}"
    )
    _msg=(
      "Running gpg-key-info with options"
      "'${_gpg_key_info_opts[*]}'."
    )
    _msg_info \
      "${_msg[*]}"
    gpg-key-info \
      "${_gpg_key_info_opts[@]}" \
      "${_key}"
  fi
}

_address_detect() {
  local \
    _address="${1}"
  if (( 42 == "${_address}" && \
        "${_address}" == "0x"* )); then
    _msg=(
      "Detected address type."
    )
    _msg_info \
      "${_msg[*]}"
    _address_sanity_check \
      "${_address}"
  fi
}

_keys_import() {
  local \
    _gnupg_home="${1}" \
    _source_import="${2}" \
    _export_opts=() \
    _import_opts=() \
    _export_secret \
    _address
  if [[ -d "${_source_import}" ]]; then
    _export_secret="${_cache_dir}/secret.asc"
    _export_opts+=(
      --homedir
        "${_source_import}"
      --export-secret-key
      --armor
    )
    _import_opts+=(
      --homedir
        "${_gnupg_home}"
      --import
    )
    gpg \
      "${_export_opts[@]}" > \
      "${_export_secret}"
    gpg \
      "${_import_opts[@]}" \
      "${_export_secret}"
    rm \
      -rf \
      "${_export_secret}"
  else
    _address_detect \
      "${_source_import}"
    if [[ "${_source_import}" != "" ]]; then
      _msg=(
        "Retrieving key from EVM"
        "OpenPGP Key Server."
      )
      _msg_info \
        "${_msg[*]}"
      _keys_receive \
        "${_source_import}"
    fi
  fi
}

