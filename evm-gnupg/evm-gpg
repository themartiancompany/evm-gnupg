_keys_enumerate() {
  local \
    _gnupg_home="${1}" \
    _wallet_address="${2}" \
    _gpg_out \
    _gpg_opts=()
  _gpg_opts+=(
    --homedir
      "${_gnupg_home}"
    --with-colons
    --list-keys
    "@${_address}"
  )
  _keys_amount="$(
    gpg \
      "${_gpg_opts[@]}" | \
      grep \
        "\buid:" | \
        wc \
          -l)"
}

_gpg_export() {
  local \
    _gnupg_home="${1}" \
    _out_file="${2}" \
    _key_type="${3}" \
    _query="${4}" \
    _gpg_opts=() \
    _out_dir \
    _export_opt
  if [[ "${_key_type}" == "" ]]; then
    _msg=(
      "Export type not set,"
      "selecting 'public key'."
    )
    _msg_info \
      "${_msg[*]}"
    _key_type="public"
  fi
  _gpg_opts+=(
    --homedir
      "${_gnupg_home}"
  )
  if [[ "${_key_type}" == "public" ]]; then
    _export_opt="--export"
  elif [[ "${_key_type}" == "private" ]]; then
    _export_opt="--export-secret-keys"
  else
    _msg=(
      "Unknown key export type"
      "'${_key_type}'."
      "Valid values are 'public'"
      "and 'private'."
    )
    _msg_error \
      "${_msg[*]}" \
      1
  fi
  _gpg_opts+=(
    "${_export_opt}"
  )
  if [[ "${_out_file}" != "" ]]; then
    _out_dir="$(
      dirname \
        "${_out_file}")"
    if [[ ! -d "${_out_dir}" ]]; then
      _msg=(
        "Directory '${_out_dir}'"
        "does not exist."
      )
      _msg_error \
        "${_msg[*]}" \
        1
    fi
    _gpg_opts+=(
      --output
        "${_out_file}"
    )
  fi
  _gpg_opts+=(
    --armor
    "${_query}"
  )
  gpg \
    "${_gpg_opts[@]}"
}

_keys_export() {
  local \
    _gnupg_home="${1}" \
    _wallet_address="${2}" \
    _wallet_name="${3}" \
    _out_file="${4}" \
    _key_type="${5}" \
    _gpg_opts=() \
    _export_opts=() \
    _import_opts=() \
    _export_secret \
    _keys_amount \
    _address
  _address="$(
    evm-wallet \
      get \
        "${_wallet_name}" \
        "address")"
  _keys_enumerate \
    "${_gnupg_home}" \
    "${_address}"
  if (( 0 == "${_keys_amount}" )); then
    _msg=(
      "No GPG keys found for wallet"
      "'${_wallet_name}' with address"
      "${_address}"
    )
    _msg_error \
      "${_msg[*]}" \
      1
  elif (( 1 < "${_keys_amount}" )); then
    _msg=(
      "Found more than a key"
      "for account '${_wallet_name}'"
      "with address '${_address}'."
    )
    _msg_error \
      "${_msg[*]}" \
      1
  fi
  _gpg_export \
    "${_gnupg_home}" \
    "${_out_file}" \
    "${_key_type}" \
    "@${_address}"
}

_keys_receive() {
  local \
    _gnupg_home="${1}" \
    _address="${2}" \
    _contact_name \
    _evm_openpgp_key_receive_opts=() \
    _receive_input_type \
    _key \
    _address
  if [[ "${quiet}" == "n" ]]; then
    _evm_openpgp_key_receive_opts+=(
      -v
    )
  fi
  if [[ "${_input_type}" == "address" ]]; then
    _receive_input_type="number"
  elif [[ "${_input_type}" == "fingerprint" ]]; then
    _receive_input_type="fingerprint"
    _address="$(
      evm-wallet \
        get \
        "${_wallet_name}" \
        "address")"
  elif [[ "${_input_type}" == "contact" ]]; then
    _receive_input_type="number"
    _contact_name="${_command_key}"
    _key="$(
      evm-wallet \
        get \
        "${_contact_name}" \
        "address")"
  fi
  _evm_openpgp_key_receive_opts+=(
    -H
      "${_gnupg_home}"
    -t
      "${_receive_input_type}"
    -f
      "n"
    -P
      "${_key}"
    # -o
    #   "${_gnupg_public}"
  )
  evm-openpgp-key-receive \
    "${_evm_openpgp_key_receive_opts[@]}" \
    "${_key}"
}

_output_type_check() {
  local \
    _output_types=()
  _output_types+=(
    "address"
    "email"
    "fingerprint"
    "name"
    "full"
  )
  if [[ " ${_output_types[*]} " != *" ${output_type} "* ]]; then
    _msg=(
      "Unknown output type"
      "'${output_type}'."
      "Valid types are"
      "'address,' 'email', 'fingeprint'"
      "and 'name'."
    )
    _msg_error \
      "${_msg[*]}" \
      1
  fi
}

_key_new_args_parse() {
  local \
    _evm_wallet_args=()
  _evm_wallet_args+=(
     get
       "${_wallet_name}"
       "address"
  )
  _address="$(
    evm-wallet \
      "${_evm_wallet_args[@]}")"
  _name="${_command_key}"
  _email="${_name}@${_address}"
  _full_name="${_command_value}"
}

_gnupg_public_setup() {
  _gnupg_public="${HOME}/.local/share/evm-gnupg/gnupg"
  mkdir \
    -p \
    "${_gnupg_public}"
  chmod \
    700 \
    "${_gnupg_public}"
}

_key_new_cmd() {
  local \
    _address \
    _name \
    _email \
    _full_name \
    _tmp_file
  _tmp_file="${_cache_dir}/temp.key"
  _key_new_args_parse
  _key_new \
    "${_gnupg_home}" \
    "${_email}" \
    "${_full_name}" \
    "${_key_passphrase}" \
    "${_key_comment}"
  _keys_export \
    "${_gnupg_home}" \
    "${_wallet_address}" \
    "${_wallet_name}" \
    "${_tmp_file}" \
    "public"
  _keys_import \
    "${_gnupg_public}" \
    "${_tmp_file}"
  rm \
    "${_tmp_file}"
}

_keys_list_cmd() {
  local \
    _query \
    _address \
    _result \
    _query_out=() \
    _query_set
  _address=""
  if [[ "${_wallet_name}" != "" ]]; then
    _address="$(
      evm-wallet \
       get \
         "${_wallet_name}" \
         "address")"
  fi
  if [[ "${_wallet_address}" != "" ]]; then
    _address="${_wallet_address}"
  fi
  _query="${_command_key}"
  if [[ "${_query}" == "" && \
        "${_address}" != "" ]]; then
    _query="@${_address}"
  fi
  _keys_list \
    "${_gnupg_home}" \
    "${_output_type}" \
    "${_query}"
  _keys_list \
    "${_gnupg_public}" \
    "${_output_type}" \
    "${_query}"
  if (( "0" == "${#_query_out[@]}" )); then
    return 1
  fi
  _array_set \
    "_query_out" \
    "_query_set"
  for _result in "${_query_set[@]}"; do
    echo \
      "${_result}"
  done
}

_keys_export_cmd() {
  local \
    _out_file
  _out_file="${_command_key}"
  _keys_export \
    "${_gnupg_home}" \
    "${_wallet_address}" \
    "${_wallet_name}" \
    "${_out_file}" \
    "${_key_type}"
}

_keys_receive_cmd() {
  local \
    _address
  _address="${_command_key}"
  _keys_receive \
    "${_gnupg_public}" \
    "${_address}"
}

_keys_import_cmd() {
  local \
    _source_import
  _source_import="${_command_key}"
  _keys_import \
    "${_source_import}"
}

_evm_gpg() {
  local \
    _wallet_name="${1}" \
    _wallet_path="${2}" \
    _wallet_password="${3}" \
    _wallet_seed="${4}" \
    _wallet_address="${5}" \
    _gnupg_home="${6}" \
    _gnupg_public="${7}" \
    _key_passphrase="${8}" \
    _key_comment="${9}" \
    _with_colons="${10}" \
    _input_type="${11}" \
    _output_type="${12}" \
    _key_type="${13}" \
    _cache_dir="${14}" \
    _target_command="${15}" \
    _command_key="${16}" \
    _command_value="${17}" \
    _command_args=() \
    _args=() \
    _gnupg_public
  shift \
    17
  _command_args+=(
    "$@"
  )
  _output_type_check
  _gnupg_public_setup
  if [[ "${_target_command}" == "new" ]]; then
    _key_new_cmd
  elif [[ "${_target_command}" == "export" ]]; then
    _keys_export_cmd
  elif [[ "${_target_command}" == "import" ]]; then
    _keys_import_cmd
  elif [[ "${_target_command}" == "list" ]]; then
    _keys_list_cmd
  elif [[ "${_target_command}" == "receive" ]]; then
    _keys_receive_cmd
  else
    _msg=(
      "Unknown command '${_target_command}'."
    )
    _msg_error \
      "${_msg[*]}" \
      1
  fi
}

_gnupg_home_auto_detect() {
  local \
    _type="${1}" \
    _home \
    _home_default \
    _attribute_name \
    _msg=()
  _home=""
  if [[ "${_type}" == "home" ]]; then
    _home_default="$(
      "_get_conf_dir_path")"
  elif [[ "${_type}" == "public" ]]; then
    _home_default="$(
      "_get_data_dir_path")/gnupg"
  else
    _msg=(
      "Unknown home type '${_type}'."
      "Allowed values are 'home' and"
      "'public'."
    )
    _msg_error \
      "${_msg[*]}" \
      1
  fi
  if [[ ! -v "override_gnupg_${_type}" ]]; then
    if [[ ! -d "${_home}" ]]; then
      mkdir \
        -p \
        "${_home_default}"
      chmod \
        700 \
        "${_home_default}"
    fi
    _home="${_home_default}"
  fi
  _set_override \
    "gnupg" \
    "${_type}" \
    "${_home}"
}

_command_key_check() {
  local \
    _msg=() \
    _flag
  _flag="false"
  if [[ "${target_command}" == "new" ]]; then
    if [[ "${command_key}" == "" ]]; then
      _flag="true"
      _msg=(
        "You are creating a key without"
        "setting an username."
      )
    fi
  elif [[ "${target_command}" == "receive" ]]; then
    if [[ "${command_key}" == "" ]]; then
      _flag="true"
      _msg=(
        "You need to specify either"
        "an address or a contact name"
        "of which to retrieve the"
        "OpenPGP keys."
      )
    fi
  fi
  if [[ "${_flag}" == "true" ]]; then
    _msg_error \
      "${_msg[*]}" \
      0
    _usage \
      1
  fi
}

_wallet_name_auto_detect() {
  local \
    _wallet_name
  _wallet_name=""
  if [[ "${target_command}" != "list" ]]; then
    _wallet_name="default"
  fi
  if [[ "${target_command}" == "new" ]]; then
    if [[ "${command_key}" != "" ]]; then
      _wallet_name="${command_key}"
    fi
  fi
  _set_override \
    "wallet" \
    "name" \
    "${_wallet_name}"
}

_username_check() {
  local \
    _real_name \
    _username \
    _msg=()
  _username="${command_key}"
  if [[ "${_username}" == "" ]]; then
    _msg=(
      "You are creating a key without"
      "setting an user name."
    )
    _msg_error \
      "${_msg[*]}" \
      0
    _usage \
      1
  fi
  if [[ "${_username}" != "${wallet_name}" ]]; then
    _msg=(
      "Creating OpenPGP key with"
      "'${_username}' but there is no"
      "'${wallet_name}' account managed"
      "by EVM Wallet."
    )
    _msg_error \
      "${_msg[*]}" \
      1
  fi
}

_key_passphrase_check() {
  local \
    _msg=()
  if [[ "${key_passphrase}" == "" ]]; then
    _msg=(
      "You are creating a key without"
      "a passphrase."
    )
    _msg_warning \
      "${_msg[*]}"
  fi
}

_contact_sanity_check() {
  local \
    _target_contact="${1}" \
    _evm_wallet_opts=() \
    _contacts_names=() \
    _contacts_string \
    _contact
  _contact_assert="false"
  _evm_wallet_opts+=(
    -o
      "name"
  )
  _contacts_string="$(
    evm-wallet \
      "${_evm_wallet_opts[@]}" \
      list)"
  IFS='\n' \
  read \
    -ra \
    _contacts_names <<< "${_contacts_string}"
  for _contact in "${_contacts_names[@]}"; do
    if [[ "${_contact}" == "${_target_contact}" ]]; then
      _contact_assert="true"
      break
    fi
  done
}

_input_type_auto_detect() {
  local \
    _contact_assert \
    _address_assert \
    _input_type
  _input_type=""
  if [[ "${target_command}" == "receive" ]]; then
    _address_assert="$(
      _address_sanity_check \
        "${command_key}" \
        "0")"
    if [[ "${_address_assert}" == "" ]]; then
      _input_type="address"
    elif [[ "${_address_assert}" != "" ]]; then
      _contact_sanity_check \
        "${command_value}"
      if [[ "${_contact_assert}" == "true" ]]; then
        _input_type="contact"
      else
        _msg=(
          "Input is not a wallet address,"
          "assuming it is a key fingerprint."
        )
        _msg_info \
          "${_msg[*]}"
        _input_type="fingerprint"
      fi
    fi
  fi
  _set_override \
    "input" \
    "type" \
    "${_input_type}"
}

_cache_dir_auto_detect() {
  local \
    _dir
  _dir="${HOME}/.cache/evm-gnupg"
  if [[ ! -v "override_cache_dir" ]]; then
    if [[ ! -d "${_dir}" ]]; then
      mkdir \
        -p \
        "${_dir}"
      chmod \
        700 \
        "${_dir}"
    fi
  fi
  _set_override \
    "cache" \
    "dir" \
    "${_dir}"
}

_wallet_address_auto_detect() {
  local \
    _wallet_address \
    _msg=()
  _wallet_address=""
  if [[ "${wallet_name}" != "" ]]; then
    _wallet_address="$(
      evm-wallet \
        get \
          "${wallet_name}" \
          "address")"
  fi
  if [[ -v "override_wallet_address" ]]; then
    if [[ ! -v "override_wallet_name" ]]; then
      wallet_name=""
    elif [[ -v "override_wallet_name" ]]; then
      if [[ "${_wallet_address}" != "${override_wallet_address}" ]]; then
        _msg=(
          "Address '${_wallet_address}'"
          "corresponding to wallet '${_wallet_name}'"
          "differs from input address"
          "'${override_wallet_address}'."
        )
        _msg_error \
          "${_msg[*]}" \
          1
      fi
    fi
  fi
  _set_override \
    "wallet" \
    "address" \
    "${_wallet_address}"
}

_set_overrides() {
  local \
    _msg=() \
    _wallet_name
  if [[ -v override_quiet ]]; then
    quiet="${override_quiet}"
  elif [[ -z "${quiet}" ]]; then
    quiet="y"
  fi
  if [[ -v override_color ]]; then
    color="${override_color}"
  elif [[ -z "${color}" ]]; then
    color="n"
  fi
  _set_override \
    "call" \
    "date" \
    "$(_get_date_human)"
  _cache_dir_auto_detect
  _set_override \
    "target" \
    "command" \
    "list"
  _wallet_name_auto_detect
  _wallet_overrides_set \
    "evm-wallet" \
    "${wallet_name}" \
    "n" # "${call_auth}"
  _wallet_address_auto_detect
  _gnupg_home_auto_detect \
    "home"
  _gnupg_home_auto_detect \
    "public"
  _set_override \
    "command" \
    "key" \
    ""
  _set_override \
    "command" \
    "value" \
    ""
  _set_override \
    "key" \
    "passphrase" \
    ""
  _set_override \
    "key" \
    "comment" \
    ""
  _set_override \
    "key" \
    "type" \
    "public"
  _command_key_check
  if [[ "${target_command}" == "new" ]]; then
    _username_check
    _key_passphrase_check
  fi
  _set_override \
    "with" \
    "colons" \
    "n"
  _set_override \
    "output" \
    "type" \
    "full"
  _input_type_auto_detect
}

# Show help usage, with an exit status.
# $1: exit status number.
_usage() {
  local \
    _usage_text
  IFS='' \
    read \
      -r \
      -d '' \
      _usage_text << \
        ENDUSAGETEXT || true

GNUPG wrapper for use by the EVM Toolchain

Usage:
  ${app_name}
    [options]
    <command>
    <key>
    <value>

  commands:
    new
      <username>
      <full-name>
    list
      (<filter>)
    import
      <import-source>
    export
      (<out-file>)

    # On next release:
    # receive
    #   <address>      or <fingerprint>
    #   (<key-number>)

  list args:
    filter

  import sources:
    directory               GNUPG home directory
                            from which to import the key.
    fingerprint             A key fingerprint.
    file                    A key file.

  key type:
    public
    private 

  options:
     -H <gnupg-home>        GNUPG home directory.
                            Default: ${gnupg_home}
     -K <gnupg-public>      Public keys keyring GNUPG
                            home directory.
                            Default: ${gnupg_public}
     -t <key-type>          It can be empty, 'public'
                            or 'private'.
                            Default: ${key_type}
     -Q                     If enabled, passes the '--with-colons'
                            serializing option to GPG.
                            Default: ${with_colons}

  key creation options:
     -P <passphrase>        Key passphrase (for 'new' command).
                            Default: ${key_passphrase}
     -C <comment>           Key comment (for 'new' command).
                            Default: ${key_comment}

  export options:
     -a <address>           Export key corresponding to a specific address.
                            Default: ${wallet_address}

  list options:
     -o <output-type>       It can be empty, 'fingerprint',
                            'name' or 'email' or 'full'.
                            Default: ${output_type}

  receive options:
     -i <input-type>        It can be 'auto', 'address',
                            'contact'.
                            Default: ${input_type}

  credentials options:
     -N <wallet-name>       Wallet name.
                            Default: ${wallet_name}
     -w <wallet-path>       Wallet path.
                            Default: ${wallet_path}
     -p <wallet-password>   Wallet password.
                            Default: ${wallet_password}
     -s <wallet-seed>       Wallet seed path.
                            Default: ${wallet_seed}

     -h                     This message.
     -c                     Enable color output
     -v                     Enable verbose output


More informations about the "OpenPGP on Ethereum"
specification are made available in EVM GPG manual,
which can be browsed with

  man \
    evm-gpg

ENDUSAGETEXT
  _printf \
    '%s\n' \
    "${_usage_text}"
  exit \
    "${1}"
}

_display_flags() {
  local \
    _flag \
    _flags=(
      "${1}"
    )
  for _flag \
    in "${_flags[@]}"; do
  _msg_info \
    "                             ${_flag}"
  done
}

# Shows configuration options.
_show_config() {
  local \
    _passphrase_show
  if [[ "${key_passphrase}" != "" ]]; then
    _passphrase_show="****"
  fi
  _msg_info "${app_name} configuration"
  _msg_info "                Call date:   ${call_date}"
  _msg_info "           Target command:   ${target_command}"
  _msg_info "              Command key:   ${command_key}"
  _msg_info "            Command value:   ${command_value}"
  _msg_info "         Receive options:"
  _msg_info "               Input type:   ${input_type}"
  _msg_info "           List options:"
  _msg_info "              Output type:   ${output_type}"
  _msg_info "              With colons:   ${with_colons}"
  _msg_info "          GNUPG directory:   ${gnupg_home}"
  _msg_info "   GNUPG public directory:   ${gnupg_public}"
  _msg_info "        New key options:"
  _msg_info "           Key passphrase:   ${_passphrase_show:-}"
  _msg_info "              Key comment:   ${key_comment}"
  _msg_info "    Credentials options:"
  _msg_info "              Wallet name:   ${wallet_name}"
  _msg_info "           Wallet address:   ${wallet_address}"
  _msg_info "              Wallet path:   ${wallet_path}"
  _msg_info "          Wallet password:   ${wallet_password}"
  _msg_info "              Wallet seed:   ${wallet_seed}"
  _msg_info "    Application options:"
  _msg_info "          Cache directory:   ${cache_dir}"
}

_globals
_global_variables
_libevm_global_variables
_requirements
getopts_opts="$(
  printf \
    "%s" \
    "a:H:P:C:Qt:i:o:" \
    "C:" \
    "$(_libevm_app_getopts_params_get)" \
    "n:" \
    "$(_wallet_getopts_params_get)" \
    "W:cvh")"
# shellcheck disable=SC2034
while \
  getopts \
    "${getopts_opts}" \
    arg; do
  _wallet_getopts_case
  _libevm_app_getopts_case
  case \
    "${arg}" in
    a)
      override_wallet_address="${OPTARG}" ;;
    H)
      override_gnupg_home="${OPTARG}" ;;
    P)
      override_key_passphrase="${OPTARG}" ;;
    C)
      override_key_comment="${OPTARG}" ;;
    Q)
      override_with_colons="y" ;;
    t)
      override_key_type="${OPTARG}" ;;
    i)
      override_input_type="${OPTARG}" ;;
    o)
      override_output_type="${OPTARG}" ;;
    W)
      override_cache_dir="${OPTARG}" ;;
    c)
      override_color="y" ;;
    v)
      override_quiet="n" ;;
    h)
      _set_overrides && \
         _usage \
           0 ;;
    *)
      if [[ " ${getopts_opts} " != *"${arg}"* ]]; then
        _msg=(
          "Invalid argument '${arg}'."
        )
        _msg_error \
          "${_msg[*]}" \
          0
        _usage \
          1
      fi ;;
  esac
done
shift \
  $(( \
    OPTIND - 1 \
  ))
if (( $# < 1 )); then
  _msg=(
    "No command given."
  )
  _msg_error \
    "${_msg[*]}" \
    0
  _set_overrides
  _usage \
    1
fi
if (( 0 < "${#}" )); then
  target_command="${1}"
fi
if (( 1 < "${#}" )); then
  command_key="${2}"
fi
if (( 2 < "${#}" )); then
  command_value="${3}"
fi
shift \
  3 || \
true
command_args+=(
  "$@"
)
_set_overrides
_show_config
app_opts=(
  "${wallet_name}"
  "${wallet_path}"
  "${wallet_password}"
  "${wallet_seed}"
  "${wallet_address}"
  "${gnupg_home}"
  "${gnupg_public}"
  "${key_passphrase}"
  "${key_comment}"
  "${with_colons}"
  "${input_type}"
  "${output_type}"
  "${key_type}"
  "${cache_dir}"
  "${target_command}"
  "${command_key}"
  "${command_value}"
  "${command_args[@]}"
)
_evm_gpg \
  "${app_opts[@]}"

# vim:set sw=2 sts=-1 et:
